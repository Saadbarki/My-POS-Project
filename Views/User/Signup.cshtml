
@{
    ViewBag.Title = "Signup";
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>signup</title>
    <link rel="stylesheet" href="../../css/stylesheet1.css">
</head>
<body>
    <div class="container">
        <h2>signup</h2>
        <form id="signup-form" action="/User/Signup" method="post">
            <div class="form-group">
                <label for="signup-fullname">User Name:</label>
                <input type="text" id="signup-fullname" name="UserName" required>
            </div>
            <div class="form-group">
                <label for="signup-email">Email:</label>
                <input type="email" id="signup-email" name="Email" required>
            </div>
            <div class="form-group">
                <label for="signup-password">Password:</label>
                <input type="password" id="signup-password" name="PasswordHash" required>
            </div>
            <div class="form-group">
                <label for="signup-confirm-password">Confirm password:</label>
                <input type="password" id="signup-confirm-password" name="signup-confirm-password" required>
            </div>
            <div class="form-group">
                <button type="submit">Sign up</button>
            </div>
        </form>
    </div>
</body>
</html>

